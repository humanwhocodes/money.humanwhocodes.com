---
import Layout from '../../../layouts/Layout.astro';
import PostBlurb from '../../../components/PostBlurb.astro';
import { loadBlogPosts, loadDataFile } from "../../../lib/util.js";
import slugify from "slugify";

export async function getStaticPaths() {

    const posts = await loadBlogPosts(await Astro.glob('../../_posts/**/*.md'));

    const postTags = new Map();
    postTags.forEach(post => {

        for (const tag of posts.frontmatter.tags) {
    
            if (!postTags.get(tag)) {
                postTags.set(tag, []);
            }
    
            postTags.get(tag).push(post);

        }
    });


    return [...postTags.entries()].map(([tag, posts]) => ({
        params: { tag: slugify(tag.toLowerCase()) },
        props: { posts, tag }
    }));

};

const { posts, tag } = Astro.props;
---
<Layout
	title={`Posts tagged with "${tag}"`}
>	
	<h2 class="no-margin">Posts tagged with "{tag}"</h2>

	{posts.map((post) => (
		<PostBlurb
			title={post.frontmatter.title}
			teaser={post.frontmatter.teaser}
			date={post.frontmatter.date}
			url={post.url}
		/>
	))}


</Layout>
